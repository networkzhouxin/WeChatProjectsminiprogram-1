.t-empty-album {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
}

.album-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.empty-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon-image {
  width: 120rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.icon-mountain {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60%;
  overflow: hidden;
}

.icon-mountain::before {
  content: "";
  position: absolute;
  width: 90rpx;
  height: 60rpx;
  background-color: #e3e6eb;
  bottom: 0;
  left: 0;
  clip-path: polygon(0% 100%, 50% 30%, 100% 100%);
}

.icon-mountain::after {
  content: "";
  position: absolute;
  width: 60rpx;
  height: 40rpx;
  background-color: #c5c9cc;
  bottom: 0;
  right: 10rpx;
  clip-path: polygon(0% 100%, 50% 40%, 100% 100%);
}

.icon-sun {
  position: absolute;
  top: 18rpx;
  right: 20rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #ffd662;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(255, 214, 98, 0.7);
}

.album-title {
  font-size: 28rpx;
  color: #333333;
  position: absolute;
  bottom: 40rpx;
  width: 80%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-count {
  font-size: 24rpx;
  color: #666666;
  position: absolute;
  bottom: 10rpx;
} 