.beautiful-album {
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.album-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* TDesign Empty组件的自定义样式 */
.empty-album-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.album-empty {
  transform: scale(0.6);
  margin: 0 !important;
}

.album-empty-image {
  width: 120rpx !important;
  height: 120rpx !important;
}

.album-empty-text {
  display: none !important;
}

/* 非空相册样式 */
.photo-stack {
  position: relative;
  width: 70%;
  height: 60%;
}

.photo {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 6rpx;
  position: absolute;
  width: 85%;
  height: 85%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.photo1 {
  top: 0;
  left: 0;
  transform: rotate(-5deg);
  z-index: 1;
}

.photo2 {
  top: 5%;
  left: 7%;
  transform: rotate(3deg);
  z-index: 2;
}

.photo3 {
  top: 10%;
  left: 15%;
  transform: rotate(-2deg);
  z-index: 3;
}

.album-title {
  font-size: 28rpx;
  color: white;
  margin-top: 20rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
}

.album-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
} 