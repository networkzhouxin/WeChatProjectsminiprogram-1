.beautiful-avatar {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.beautiful-avatar::before {
  content: "";
  position: absolute;
  width: 60%;
  height: 40%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  top: 10%;
  left: 20%;
}

.beautiful-avatar::after {
  content: "";
  position: absolute;
  width: 30%;
  height: 30%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  bottom: 10%;
  right: 15%;
}

.avatar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  width: 55%;
  height: 55%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.avatar-icon::before {
  content: "";
  position: absolute;
  width: 50%;
  height: 50%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  top: 10%;
  left: 25%;
}

.avatar-icon::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 60%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50% 50% 0 0;
  bottom: -25%;
  left: 0;
}

.avatar-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: white;
  z-index: 3;
} 