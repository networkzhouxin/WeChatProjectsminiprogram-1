.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}

.userinfo_container {
  display: flex;
  gap: 80rpx;
  align-items: center;
  gap: 20rpx;
  position: absolute;
  top: -30rpx;
  padding: 0rpx 60rpx;
}

.avatar {
  width: 128rpx !important;
  height: 128rpx !important;
  /* background-color: #e5e5e5; */
  border-radius: 50%;
  transform: scale(1.8);
  position: relative;
  z-index: 2;
}

.username {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
}

.settings_container {
  position: relative;
  top: 150rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-button {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left: 0rpx;
  margin: 0;
  width: 400rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
}

.button-hover {
  background-color: #fff;
}

.setting_icon {
  width: 40rpx !important;
  height: 40rpx !important;
  position: relative;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.generic-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #8e8e93;
  color: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}

.icon-person {
  width: 60%;
  height: 60%;
  border-radius: 50%;
  background-color: #ffffff;
  position: relative;
}

.icon-person::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 50%;
  background-color: #ffffff;
  border-radius: 50% 50% 0 0;
  bottom: -40%;
  left: 0;
}

.icon-contact, .icon-share {
  width: 60%;
  height: 60%;
  background-color: #ffffff;
  position: relative;
}

.icon-contact::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  border: 2rpx solid #ffffff;
  border-radius: 4rpx;
  top: -2rpx;
  left: -2rpx;
}

.icon-share::before {
  content: "";
  position: absolute;
  width: 80%;
  height: 2rpx;
  background-color: #ffffff;
  top: 50%;
  left: 10%;
}

.icon-share::after {
  content: "";
  position: absolute;
  width: 2rpx;
  height: 80%;
  background-color: #ffffff;
  left: 50%;
  top: 10%;
}