<!-- pages/me/index.wxml -->
<view class="page_container">
  <view class="top_bg" />
  <view class="main_content">
    <view class="userinfo_container">
      <view class="generic-icon avatar" bind:tap="getOpenId">
        <view class="icon-person"></view>
      </view>
      <block wx:if="{{ !openId }}">
        <view class="username" bind:tap="getOpenId">请点击登录</view>
      </block>
      <block wx:else>
        <view class="username">{{openId ? (openId.substring(0, 8) + '...') : ''}}</view>
      </block>
    </view>
    <view class="settings_container">
      <!-- <view class="setting_item">
        <view class="left">
