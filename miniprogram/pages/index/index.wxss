/* pages/album/index.wxss */
page {
  background-color: #f5f5f5;
}

.album-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: relative;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header {
  padding: 40rpx 30rpx;
  background-color: #fff;
}

.title {
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
}

.tabs-container {
  width: 100%;
  background-color: #fff;
}

.tab-header-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  overflow: hidden;
}

.tab-scroll-view {
  width: calc(100% - 80rpx);
  white-space: nowrap;
  overflow: hidden;
  -webkit-overflow-scrolling: touch; /* iOS流畅滚动 */
  scroll-behavior: smooth; /* 平滑滚动 */
}

.tab-header {
  display: inline-flex;
  padding-right: 80rpx; /* 为右侧的添加按钮留出空间 */
  will-change: transform; /* 优化动画性能 */
  transition: transform 0.35s cubic-bezier(0.23, 1, 0.32, 1); /* 使用更平滑的缓动函数 */
}

.tab-item {
  padding: 24rpx 0;
  min-width: 140rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  margin-right: 20rpx;
  display: inline-block;
  transition: all 0.25s cubic-bezier(0.23, 1, 0.32, 1);
  will-change: transform, color;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-item.active {
  color: #07C160;
  font-weight: 500;
  transform: scale(1.05);
  transition-duration: 0.3s;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #07C160;
  border-radius: 3rpx;
  transition: all 0.2s ease-out;
}

/* 添加固定在右侧的新增按钮 */
.add-tab-fixed {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  z-index: 10;
  border-left: 1rpx solid #f0f0f0;
  box-shadow: -5rpx 0 10rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.add-tab-fixed:active {
  background-color: #f8f8f8;
}

.add-icon {
  font-size: 32rpx;
  color: #07C160;
  font-weight: bold;
  transition: transform 0.2s ease;
}

.add-tab-fixed:active .add-icon {
  transform: scale(0.9);
}

/* 标签编辑输入框 */
.tab-input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  border-radius: 6rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  border: 1px solid #07C160;
  min-width: 120rpx;
  caret-color: #07C160; /* 光标颜色 */
  position: relative;
  z-index: 20;
}

.upload-button-container {
  padding: 20rpx 24rpx;
  background-color: #fff;
}

.scrollable-content {
  margin-top: 280rpx; /* 根据固定头部的实际高度调整 */
  flex: 1;
  width: 100%;
}

.grid-container {
  padding: 20rpx 24rpx;
  flex: 1;
  box-sizing: border-box;
}

.upload-button {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border: 2rpx dashed #ddd;
}

.upload-icon {
  font-size: 40rpx;
  color: #07C160;
  margin-right: 12rpx;
  line-height: 1;
  font-weight: 300;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

/* 时间轴样式 */
.timeline-container {
  padding-bottom: 30rpx;
}

.date-group {
  margin-bottom: 40rpx;
}

.date-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.date-line {
  flex: 1;
  height: 1px;
  background-color: #e0e0e0;
}

.date-text {
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  font-weight: 500;
}

.date-images-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -12rpx;
}

.image-item {
  width: 50%;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.image-card {
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.image-wrapper {
  width: 100%;
  height: 340rpx;
  position: relative;
  overflow: hidden;
}

.album-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
  object-fit: cover;
}

.image-desc-container {
  display: flex;
  padding: 16rpx;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.image-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
  padding: 0;
  width: calc(100% - 40rpx);
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.loading-container {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e9e9e9;
  border-top: 3rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 标签操作菜单样式 */
.tab-actions-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-actions {
  width: 500rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-weight: 500;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
  color: #07C160;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.action-item.delete .action-icon {
  color: #f44336;
}

.action-cancel {
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 编辑确认按钮 */
.edit-confirm {
  position: fixed;
  right: 20rpx;
  top: 148rpx;
  z-index: 200;
}

.confirm-btn {
  background-color: #07C160;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(7, 193, 96, 0.2);
}

/* 自定义弹窗 */
.custom-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-modal {
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.custom-modal-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
  font-weight: 500;
  border-bottom: 1rpx solid #f0f0f0;
}

.custom-modal-content {
  padding: 30rpx;
}

.custom-modal-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.custom-modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.custom-modal-btn {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
}

.custom-modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.custom-modal-btn.confirm {
  color: #07C160;
  font-weight: 500;
} 