/* pages/index/index.wxss */
.container {
  padding: 4rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.album-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8rpx;
  padding-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 4rpx;
}

.album-item {
  border-radius: 12rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  min-width: 340rpx;
  display: flex;
  flex-direction: column;
}

.album-cover {
  position: relative;
  width: 100%;
  height: 340rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.album-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.album-info {
  padding: 12rpx 4rpx;
}

.album-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.add-album {
  display: flex;
  flex-direction: column;
}

.add-album .album-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background: #f8f8f8;
}

.add-album .album-cover text {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 8rpx;
  line-height: 1;
}

.add-album .album-cover .add-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #bbb;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  padding: 30rpx;
}

.album-name-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-footer button {
  flex: 1;
  /* height: 88rpx; */
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  margin: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #07c160;
  color: #fff;
}

.album-list-container {
  padding: 20px 15px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 添加刷新按钮样式 */
.refresh-btn {
  width: auto;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #07C160;
  border-radius: 30rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  padding: 0 20rpx;
}

.refresh-icon {
  width: 40rpx;
  height: 40rpx;
}

.refresh-text-btn {
  font-size: 28rpx;
  color: #fff;
}

/* 下拉刷新提示 */
.pull-refresh-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
  color: #666;
  font-size: 14px;
  margin-bottom: 15px;
}

.refresh-text {
  color: #07C160;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 相册网格 */
.album-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8px;
}

.album-item {
  /* width: 33.33%; */
  padding: 4px;
  box-sizing: border-box;
  /* margin-bottom: 10px; */
}

.album-cover {
  position: relative;
  width: 100%;
  height: 178px;
  border-radius: 10px;
  overflow: hidden;
  background-color: #e0e0e0;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.album-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.album-title {
  margin-top: 6px;
  font-size: 14px;
  color: #333;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 2px;
}

/* 相册数量文本样式 */
.album-count-text {
  font-size: 12px;
  color: #999;
  text-align: left;
  margin-top: 2px;
  padding: 0 2px;
} 