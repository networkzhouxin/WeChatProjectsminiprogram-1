/* pages/index/index.wxss */
.container {
  padding: 4rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.album-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8rpx;
  padding-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 4rpx;
}

.album-item {
  border-radius: 12rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  min-width: 340rpx;
  display: flex;
  flex-direction: column;
  padding: 4rpx;
}

.album-cover {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 正方形比例 */
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.album-cover image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 确保TDesign Empty组件显示正确 */
.album-cover t-empty-album {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.album-info {
  padding: 12rpx 4rpx;
}

.album-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.album-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.add-album {
  display: flex;
  flex-direction: column;
}

.add-album .album-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background: #f8f8f8;
  position: relative;
}

.add-album .album-cover text {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 8rpx;
  line-height: 1;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -100%);
}

.add-album .album-cover .add-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 30%);
  width: 100%;
  text-align: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #bbb;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  padding: 30rpx;
}

.album-name-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-footer button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  margin: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #0052d9;
  color: #fff;
}

/* 刷新按钮样式 */
.refresh-btn {
  width: auto;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #07C160;
  border-radius: 30rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  padding: 0 20rpx;
}

.refresh-text-btn {
  font-size: 28rpx;
  color: #fff;
}

/* 下拉刷新提示 */
.pull-refresh-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
  color: #666;
  font-size: 14px;
  margin-bottom: 15px;
}

.refresh-text {
  color: #07C160;
}

/* 相册网格 */
.album-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8px;
}

.album-item {
  /* width: 33.33%; */
  padding: 4px;
  box-sizing: border-box;
  /* margin-bottom: 10px; */
}

.album-cover {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 正方形比例 */
  border-radius: 10px;
  overflow: hidden;
  background-color: #e0e0e0;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.album-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.album-title {
  margin-top: 6px;
  font-size: 14px;
  color: #333;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 2px;
}

/* 相册数量文本样式 */
.album-count-text {
  font-size: 12px;
  color: #999;
  text-align: left;
  margin-top: 2px;
  padding: 0 2px;
}

/* TDesign Empty组件的自定义样式 */
.custom-empty {
  margin-top: 80rpx;
}

.custom-empty-image {
  width: 160rpx !important;
  height: 160rpx !important;
  color: #0052d9 !important;
}

.custom-empty-text {
  font-size: 30rpx !important;
  color: #333333 !important;
  margin-top: 20rpx;
}

.add-album-btn {
  margin-top: 30rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  background: #0052d9;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  border: none;
}

/* 隐藏旧的空状态样式 */
.empty-text, .empty-subtext {
  display: none;
}

.custom-empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.custom-icon-container {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
}

.custom-icon-folder {
  width: 110rpx;
  height: 90rpx;
  background-color: #e3e6eb;
  border-radius: 8rpx;
  position: relative;
}

.custom-icon-folder::before {
  content: "";
  position: absolute;
  width: 40rpx;
  height: 20rpx;
  background-color: #e3e6eb;
  border-radius: 8rpx 8rpx 0 0;
  top: -10rpx;
  left: 15rpx;
}

.custom-icon-folder::after {
  content: "";
  position: absolute;
  width: 60rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #c5c9cc;
  top: 40rpx;
  left: 25rpx;
  box-shadow: 0 18rpx 0 #c5c9cc, 0 36rpx 0 #c5c9cc;
}

.custom-empty-text {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 40rpx;
} 