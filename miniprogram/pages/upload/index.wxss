/* pages/upload/index.wxss */
.container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.nav-btn {
  padding: 20rpx;
  font-size: 32rpx;
}

.cancel-btn {
  color: #333;
}

.save-btn {
  color: #07c160;
}

/* 主内容区域 */
.content-section {
  margin-top: 88rpx;
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

/* 照片网格样式 */
.photos-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  background: #fff;
}

.photo-grid-item {
  width: calc(33.33% - 20rpx);
  position: relative;
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f8f8f8;
}

/* 使用伪元素确保宽高比1:1 */
.photo-grid-item::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.photo-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-photo {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.delete-icon {
  color: #fff;
  font-size: 28rpx;
}

/* 添加照片按钮 */
.add-photo-item {
  width: calc(33.33% - 20rpx);
  position: relative;
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  box-sizing: border-box;
}

.add-photo-item::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.add-photo-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
}

/* 空状态样式 */
.empty-photos {
  width: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.empty-photos .add-photo-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
}

.big-add-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.big-add-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.big-add-text {
  font-size: 28rpx;
  color: #999;
}

/* 描述输入框 */
.desc-input {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

/* 照片预览区域 */
.photo-preview-area {
  width: 100%;
  height: 750rpx;
  background-color: #f8f8f8;
  position: relative;
  overflow: hidden;
}

.photo-preview-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.photo-preview-scroll {
  width: 100%;
  height: 100%;
  position: relative;
}

.photo-swiper {
  width: 100%;
  height: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 照片缩略图 */
.photos-thumbnails {
  width: 100%;
  padding: 20rpx 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.thumbnail-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 0 20rpx;
}

.thumbnails-container {
  display: inline-flex;
  padding: 5rpx 0;
}

.thumbnail-item {
  width: 140rpx;
  height: 140rpx;
  margin-right: 15rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.thumbnail-item.active {
  border-color: #07c160;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-thumbnail {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.delete-icon {
  font-size: 28rpx;
}

/* 添加缩略图按钮样式 */
.add-thumbnail {
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.add-thumbnail-content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  color: #999;
  font-size: 50rpx;
  line-height: 1;
}

/* 设置区域 */
.settings-section {
  padding: 0 30rpx;
  border-top: 10rpx solid #f5f5f5;
  margin-top: 30rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-label {
  font-size: 28rpx;
  color: #333;
}

/* 照片描述容器 */
.desc-container {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

/* 照片压缩选项 */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  color: #333;
}

/* 右上角上传按钮 */
.upload-btn-fixed {
  position: fixed;
  top: 20rpx;
  right: 30rpx;
  z-index: 100;
}

/* 已选择照片列表样式 */
.selected-photos-container {
  margin: 30rpx 0;
}

.selected-photos-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.selected-photos-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.selected-photo-item {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  margin-right: 15rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.selected-photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 添加照片区域样式 */
.add-photo-area {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.add-photo-button {
  width: 300rpx;
  height: 80rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

/* 相册选择器样式 */
.album-selector {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.album-selector .cuIcon-right {
  color: #999;
}

/* 相册选择弹窗 */
.album-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.album-selector-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  max-height: 80%;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.album-selector-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.album-list {
  flex: 1;
  max-height: 800rpx;
  padding: 20rpx 30rpx;
}

.album-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.album-item.selected {
  background-color: #f0f9eb;
}

.album-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.album-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.album-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.selected-icon {
  color: #07c160;
  font-size: 36rpx;
}

.empty-album-tip {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx 30rpx 40rpx;
}

.create-album-btn {
  width: 100%;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
} 