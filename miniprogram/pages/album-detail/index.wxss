/* pages/album-detail/index.wxss */
/* 主容器 */
.album-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
}

/* 顶部导航栏 */
.navigation-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.album-info {
  display: flex;
  flex-direction: column;
}

.album-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
}

.photo-count {
  font-size: 24rpx;
  color: #888888;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding: 15rpx;
  box-sizing: border-box;
}

/* 日期分组样式 */
.photos-by-date {
  margin-bottom: 20rpx;
}

.photo-date-group {
  margin-bottom: 30rpx;
}

.date-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  padding: 15rpx 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

/* 照片网格 */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5rpx;
}

.photo-item {
  width: 33.33%;
  padding: 5rpx;
  box-sizing: border-box;
}

.photo-image {
  width: 100%;
  height: 230rpx;
  object-fit: cover;
  border-radius: 6rpx;
  background-color: #eee;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-animation {
  margin-bottom: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-image {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
  text-align: center;
}

.add-photo-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07C160;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0;
}

/* 悬浮按钮 */
.floating-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07C160;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.float-icon {
  color: #FFFFFF;
  font-size: 60rpx;
  font-weight: 300;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .photo-grid {
    margin: 0 -10rpx;
  }
  
  .photo-item {
    width: calc(25% - 20rpx);
    margin: 10rpx;
  }
}

/* 调试信息 */
.debug-info {
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.debug-text {
  display: block;
  margin-bottom: 5rpx;
}

/* 相册详情页样式 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
