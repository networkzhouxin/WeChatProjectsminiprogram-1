/**app.wxss**/
/* 现在npm已安装，可以取消注释 */
@import './miniprogram_npm/tdesign-miniprogram/common/style/index.wxss';

/* 覆盖TDesign图标字体配置，解决网络请求错误 */
@font-face {
  font-family: 't';
  font-style: normal;
  font-display: swap;
  font-weight: normal;
  /* 使用base64编码或者本地字体文件代替网络请求 */
  src: url('data:application/font-woff;charset=utf-8;base64, ') format('woff');
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 全局美观的默认用户头像样式 */
.beautiful-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(145deg, #6a11cb 0%, #2575fc 100%);
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.beautiful-avatar::before {
  content: "";
  position: absolute;
  width: 60%;
  height: 40%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  top: 10%;
  left: 20%;
}

.beautiful-avatar::after {
  content: "";
  position: absolute;
  width: 30%;
  height: 30%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  bottom: 10%;
  right: 15%;
}

.avatar-icon {
  width: 55%;
  height: 55%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.avatar-icon::before {
  content: "";
  position: absolute;
  width: 50%;
  height: 50%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  top: 10%;
  left: 25%;
}

.avatar-icon::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 60%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50% 50% 0 0;
  bottom: -25%;
  left: 0;
}